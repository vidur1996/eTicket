<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    tools:context=".MainMenuActivity">

    <TextView
        android:id="@+id/tx_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/ticket_btn"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text="Generate \n Ticket "
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_title" />

    <Button
        android:id="@+id/favorite_btn"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text="Favorite \n Routes  "
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tx_title" />

    <Button
        android:id="@+id/lastticket_btn"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text=" Last \n Ticket "
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticket_btn"
        app:layout_constraintVertical_bias="0.138" />

    <Button
        android:id="@+id/recent_btn"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text=" Recent \n Travel "
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_btn" />

    <Button
        android:id="@+id/balance_btn"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text="Account \n Balance  "
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastticket_btn" />

    <Button
        android:id="@+id/share_btn"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text="share \n Credit "
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recent_btn" />

    <Button
        android:id="@+id/account_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="My Profile"
        android:textSize="15sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_btn" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="logout"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/account_btn"
        app:layout_constraintStart_toStartOf="parent"

         />


</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>